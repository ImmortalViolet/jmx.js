<div class="<%=tgclass%>_body">
	<img src="thread.gif"/>
	<span>ThreadGroup</span>
	<div class="strProp">
		<span class="label">Name</span><input type="textbox" name="Threadgroup1.name" value="<%=tgname%>"></input>
	</div>
	<div class="strProp">
		<span class="label">Comments</span><input type="textbox" name="Threadgroup1.comments" value="<%=comments%>"></input>
	</div>
	<div>
		<div>Action to be taken after a sampler error</div>
		<input type="radio" name="ThreadGroup1.axnOnErr_axn" value="C" <%=(ThreadGroup_on_sample_error=='continue'? "checked" : "" )%> >Continue</input>
		<input type="radio" name="ThreadGroup1.axnOnErr_axn" value="SNTL" <%=(ThreadGroup_on_sample_error=='start next'? "checked" : "" )%> >Start Next Thread Loop</input>
		<input type="radio" name="ThreadGroup1.axnOnErr_axn" value="ST" <%=(ThreadGroup_on_sample_error=='stop'? "checked" : "" )%> >Stop Thread</input>
		<input type="radio" name="ThreadGroup1.axnOnErr_axn" value="STest" <%=(ThreadGroup_on_sample_error=='stop test'? "checked" : "" )%> >Stop Test</input>
		<input type="radio" name="ThreadGroup1.axnOnErr_axn" value="STN" <%=(ThreadGroup_on_sample_error=='stop test now'? "checked" : "" )%> >Stop Test Now</input>
	</div>
	<div>
		<div>Thread Properties</div>
		<div class="strProp">
			<span class="label">Number of Threads(users)</span><input type="textbox" name="Threadgroup1.name" value="<%=ThreadGroup_num_threads%>"></input>
		</div>
		<div class="strProp">
			<span class="label">Ramp-Up period (in seconds)</span><input type="textbox" name="Threadgroup1.name" value="<%=ThreadGroup_ramp_time%>"></input>
		</div>
	</div>
	<div>
		<span>Loop Count</span> <input type="checkbox" value="" <%=(continue_forever==true ? "checked" : "")%> ></input> <span>Forever</span>
		<input type="textbox" name="Threadgroup1.name" value="<%=loops%>"></input>
	</div>
	<div> <input type="checkbox" value="" ></input> <span>Delay Thread Creation until needed</span></div>
	<div> <input type="checkbox" value="" <%=(ThreadGroup_scheduler==true ? "checked" : "")%> ></input> <span>Scheduler</span> </div>
</div>
